<nav>
    <div class="container">
        <section class="logo">
            <a href="/"><img src="/image/logo.svg" alt="Logo" style="height: 60%;"/></a>
        </section>
        <section class="links">
            <div class="bars">
                <span></span><span></span><span></span>
            </div>
            <ul>
                <!-- Active class used to distinguish the current page the user opens -->
                <!-- Create the Home -->
                <a href="/"><li <% if (currentPage === 'home') { %> class="active" <% } %>>Home</li></a>
                <!-- Create the Login link if the user doesn't log in -->
                <% if (!authenticated.username) { %>
                    <a href="/login"><li <% if (currentPage === 'login') { %> class="active" <% } %>>Login</li></a>
                <% } %>
                <!-- Create the Register link if the user doesn't log in -->
                <% if (!authenticated.username) { %>
                    <a href="/register"><li <% if (currentPage === 'register') { %> class="active" <% } %>>Register</li></a>
                <% } %>
                <!-- Create the Profile link if the user logs in -->
                <% if (authenticated.username) { %>
                    <a href="/profile/<%= authenticated.username %>"><li <% if (currentPage === 'profile' && isAuthorized) { %> class="active" <% } %>>Profile</li></a>
                <% } %>
                <% if (authenticated.username) { %>
                    <a href="/settings" class="active"><li <% if (currentPage === 'profile-settings') { %> class="active" <% } %>>Settings</li></a>
                <% } %>
            </ul>
        </section>
    </div>
</nav>